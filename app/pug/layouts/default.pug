
-var cmsTpl = '/'

-var previewImg = "images/preview.png"

-var skillsImg1 = "images/skillsPS.png"  
-var skillsImg2 = "images/skillsAI.png"
-var skillsImg3 = "images/skillsAE.png"
-var skillsImg4 = "images/skillsFigma.png"

-var portImg1 = "images/Port1.png"  
-var portImg2 = "images/Port2.png"
-var portImg3 = "images/Port3.png"

-var links = "images/Links.png"

mixin svg(id,cls)
    -var cls = cls ? ' ' + cls : ''
    svg(class='icon icon-' + id + cls width="100%" height="100%" xmlns="http://www.w3.org/2000/svg")
        use(xlink:href=cmsTpl + 'images/svg/sprite.svg#' + id)

doctype html
html(lang='ru')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='author' content='Программирование и верстка: @milkamil93.')
        meta(name='viewport', content='width=device-width,initial-scale=1,shrink-to-fit=no,maximum-scale=1,height=device-height,viewport-fit=cover')
        title Заголовок
        base(href='/')
        meta(name='description', content="")
        meta(name='keywords', content="")
        meta(property='og:title', content="")
        meta(property="og:description" content="")
        meta(property='og:type', content='website')
        meta(property='og:url', content="")
        meta(property='og:image', content=cmsTpl + 'assets/images/logo.png')
        meta(name='theme-color' content="#fff")
        link(rel='stylesheet' href=cmsTpl + 'css/vendor.min.css')
        link(rel='stylesheet' href=cmsTpl + 'css/common.min.css')

                
    body
        header.header
            .menu
                ul.header-ul 
                    li.header-li.nav-active Home
                    li.header-li About me
                    li.header-li Skills
                    li.header-li Portfolio
                    li.header-li Contacts
                hr.hrLine
            .preview
                p.header-name Denis<br> Novik
                p.header-info UX | UI designer <br> 24 years old, Minsk
                p.header-lang <span class="span-lang">RU</span> | ENG
                img(src=previewImg).previewImg

        main.main
            .about-me
                .AM-textBox
                    .AM-Box1
                        p.AM-title About me 
                    .AM-Box2
                        p.AM-text Hi, I'm Denis – UX/UI designer from Minsk. <br> I'm interested in design and everything connected with it. <br> 
                        p.AM-text I'm studying at courses "Web and mobile design <br> interfaces" in IT-Academy. <br>
                        p.AM-text Ready to implement excellent projects <br> with wonderful people.
            .skills
                .S-Box1
                    p.S-title Skills
                .S-Box2
                    p.S-text I work in such programs as
                .S-Box3
                    .PS-Box.flexBox
                        img(src=skillsImg1).skillsImg
                        p.PS-text.flexBoxText Adobe<br> Photoshop
                        .stars
                            p &#9733; &#9733; &#9733; &#9733; <span class="spanStar"> &#9733; </span>
                    .AI-Box.flexBox 
                        img(src=skillsImg2).skillsImg
                        p.AI-text.flexBoxText Adobe<br> Illustrator
                        .stars
                            p &#9733; &#9733; &#9733; <span class="spanStar"> &#9733; </span> <span class="spanStar"> &#9733; </span>
                    .AE-Box.flexBox
                        img(src=skillsImg3).skillsImg
                        p.AE-text.flexBoxText After<br> Effects
                        .stars
                            p &#9733; &#9733; &#9733; &#9733; <span class="spanStar"> &#9733; </span>
                    .F-Box.flexBox 
                        img(src=skillsImg4).skillsImg
                        p.F-text.flexBoxText Figma
                        .stars
                            p &#9733; &#9733; &#9733; &#9733; <span class="spanStar"> &#9733; </span>
                    
            .portfolio 
                .Port-Box1
                        p.Port-title Portfolio
                .Port-Box2
                    .Port-part1.BLOCK
                        img(src=portImg1).portImg
                        a.portLink Online fashion store - Homepage
                    .Port-part2.BLOCK
                        img(src=portImg2).portImg
                        a.portLink Reebok Store - Concept
                    .Port-part3.BLOCK
                        img(src=portImg3).portImg
                        a.portLink Braun Landing Page - Concept

        
            block main

        footer.footer
            .footer-Box 
                .footer-Box1
                    p.Footer-title Contacts
                .footer-Box2
                    p.Footer-text1 Want to know more or just chat? You are welcome!
                .footer-Button 
                    p.text-button Send message
                .footer-Links 
                    img(src=links).linksImg
                .footer-Box3
                    p.Footer-text2 Like me on <br> LinkedIn, Instagram, Behance, Dribble

        script(src=cmsTpl + 'js/vendor.min.js')
        script(src=cmsTpl + 'js/common.min.js')